<%- include ("partials/header.ejs") %>
<%- include ("partials/navbar.ejs") %>

<body>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4" style="color:#5900ff;font-weight:bold;">Imóveis disponíveis</h1>
            <p class="lead" style="color:#3d22b8;">Veja todos os imóveis cadastrados em nossa imobiliária.</p>
        </div>
        <% articles.forEach(function(article) { %>
            <div class="card mb-3 shadow border-0 rounded-lg">
                <div class="card-header" style="background:#5900ff;color:#fff;">
                    <h2 style="font-size:1.3rem;"><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <% if(article.photo) { %>
                        <img src="<%= article.photo %>" alt="Foto do imóvel" style="max-width:200px;max-height:150px;" class="mb-3 rounded">
                    <% } %>
                    <a href="/<%= article.slug %>" class="btn" style="background:#5900ff;color:#fff;font-weight:bold;">Ver detalhes</a>
                </div>
            </div>
        <% }) %>
    </div>
    <%- include ("partials/footer.ejs") %>
</body>
