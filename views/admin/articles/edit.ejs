<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container">
    <hr>
    <div class="card shadow border-0 rounded-lg">
        <div class="card-header" style="background:#27168a;color:#fff;">
            <h2>Editar Imóvel</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/articles/save">
                <!-- Campo oculto com o ID do imóvel -->
                <input type="hidden" name="id" value="<%= article.id %>">

                <!-- Título do imóvel -->
                <input class="form-control" type="text" name="title" placeholder="Título do imóvel" value="<%= article.title %>"><br>

                <!-- Descrição do imóvel -->
                <textarea class="form-control" name="body" id="article" placeholder="Descrição do imóvel"><%= article.body %></textarea><br>

                <!-- Seleção de categoria com a atual pré-selecionada -->
                <label>Categoria</label>
                <select name="category" class="form-control">
                    <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>" <%= category.id === article.categoryId ? "selected" : "" %>>
                            <%= category.title %>
                        </option>
                    <% }) %>
                </select><br>

                <!-- Novo campo para edição do link da imagem do imóvel -->
                <label>URL da imagem do imóvel</label>
                <input class="form-control" type="text" name="photo" placeholder="Cole aqui a URL da imagem (ex: https://...jpg)" value="<%= article.photo %>"><br>

                <!-- Botão de envio -->
                <button class="btn" style="background:#3421a1;color:#fff;font-weight:bold;">Atualizar</button>
            </form>
        </div>
    </div>
</div>

<%- include ("../../partials/footer.ejs") %>

<!-- TinyMCE -->
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ],
        toolbar:
            'undo redo | formatselect | bold italic backcolor | \
            alignleft aligncenter alignright alignjustify | \
            bullist numlist outdent indent | removeformat | help'
    });
</script>
